# Node Environment
NODE_ENV=production
PORT=4321

# Database Configuration
# Use relative path for development, absolute for production
DATABASE_PATH=./database/biyuboxing.db

# Admin Authentication
# Generate password hashes using: node scripts/generate-password-hash.js "your-password"
# DO NOT commit actual hashed passwords to git!
ADMIN_PASSWORD_HASH=your-hashed-password-here
LEE_PASSWORD_HASH=your-hashed-password-here

# Session Configuration
# Generate a secure session secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# DO NOT use the example value below - generate your own!
SESSION_SECRET=your-cryptographically-secure-128-char-hex-string-here
SESSION_MAX_AGE=86400000
