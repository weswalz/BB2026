---
import { getUpcomingEvents } from '../../lib/events.js';

// Fetch upcoming events
let upcomingEvents = [];
try {
  upcomingEvents = await getUpcomingEvents();
} catch (error) {
  console.error('Error fetching upcoming events:', error);
}

// Format date function
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---
<section class="w-full py-12 md:py-20 upcoming-events-section">
  <div class="mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-black uppercase mb-8 tracking-wide">
      <span class="text-white">UPCOMING</span>
      <span class="text-yellow-400">EVENTS</span>
    </h2>

    {upcomingEvents.length > 0 ? (
      <div class="mx-auto px-4">
        <div class="space-y-20">
          {upcomingEvents.map((event, index) => (
            <div class="max-w-5xl mx-auto">
              <div class="grid md:grid-cols-2 gap-8 items-center">
                <!-- Event Poster -->
                <div class="flex justify-center md:justify-end">
                  <img
                    src={event.image}
                    alt={`${event.title} Event Poster`}
                    class="w-full max-w-[300px] h-auto shadow-2xl"
                    loading="lazy"
                  />
                </div>

                <!-- Event Details -->
                <div class="text-center md:text-left">
                  <div class="space-y-3">
                    <h2 class="text-4xl md:text-5xl font-display font-black text-[#F7DF5B] uppercase">
                      {event.title}
                    </h2>
                    {event.description && (
                      <p class="text-base md:text-lg font-bold uppercase">
                        {event.description}
                      </p>
                    )}
                    <div class="space-y-1 text-lg">
                      <p class="uppercase">{event.city}, {event.country}</p>
                      <p class="uppercase font-semibold">{formatDate(event.date)}</p>
                      {event.venue && (
                        <p class="uppercase">{event.venue}</p>
                      )}
                    </div>
                    <div class="pt-4 flex flex-col sm:flex-row gap-3">
                      <a
                        href={`/events/${event.slug}/`}
                        class="inline-block bg-transparent border-2 border-[#F7DF5B] text-[#F7DF5B] px-8 py-3 font-bold uppercase hover:bg-[#F7DF5B] hover:text-black transition-all duration-300 text-center"
                      >
                        Learn More
                      </a>
                      {event.ticketUrl ? (
                        <a
                          href={event.ticketUrl}
                          target="_blank"
                          rel="noopener"
                          class="inline-block bg-[#F7DF5B] text-black px-8 py-3 font-bold uppercase hover:bg-white hover:text-black active:bg-gray-100 active:text-black visited:bg-[#F7DF5B] visited:text-black transition-all duration-300 transform hover:scale-105 text-center"
                        >
                          Get Tickets
                        </a>
                      ) : (
                        <span class="inline-block bg-gray-600 text-white px-8 py-3 font-bold uppercase text-center">
                          Tickets Coming Soon
                        </span>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ) : (
      <div class="relative max-w-5xl mx-auto rounded-lg overflow-hidden shadow-2xl border border-white/10">
        <div class="relative p-8 md:p-16 text-white bg-gradient-to-r from-black to-gray-900">
          <h3 class="text-2xl md:text-4xl font-extrabold uppercase text-white">Next Event Announcement Coming Soon</h3>
          <p class="mt-4 text-base md:text-lg text-white/80">Stay tuned for our next exciting boxing event announcement!</p>
          <a href="/events/" class="biyu-unified-btn mt-8">
            View Previous Events
          </a>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .text-shadow-lg {
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }
</style>
